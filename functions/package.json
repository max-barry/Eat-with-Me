{
    "name": "functions",
    "description": "Cloud Functions for Firebase",
    "scripts": {
        "lint": "eslint .",
        "watch": "babel src --out-dir dist -w",
        "serve": "firebase serve --only functions",
        "shell": "firebase experimental:functions:shell",
        "start": "npm run shell",
        "deploy": "firebase deploy --only functions",
        "logs": "firebase functions:log",
        "clean": "rimraf dist",
        "build:funcs": "babel src --out-dir dist",
        "deps:copy": "cpx *{package.json,yarn.lock} dist",
        "deps:install": "cd dist && yarn"
    },
    "dependencies": {
        "@google-cloud/firestore": "^0.13.1",
        "apollo-engine": "^1.0.4",
        "apollo-server-express": "^1.3.3",
        "body-parser": "^1.18.2",
        "express": "^4.16.3",
        "firebase-admin": "~5.10.0",
        "firebase-functions": "^0.9.0",
        "graphql": "^0.13.2",
        "graphql-tools": "^2.23.1"
    },
    "devDependencies": {
        "@babel/cli": "^7.0.0-beta.42",
        "@babel/core": "^7.0.0-beta.42",
        "@babel/preset-env": "^7.0.0-beta.42",
        "cpx": "^1.5.0",
        "eslint": "^4.12.0",
        "eslint-plugin-promise": "^3.6.0"
    },
    "private": true
}
